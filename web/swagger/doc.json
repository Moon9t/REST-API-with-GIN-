                "name"
            ],
            "properties": {
                "date": {
                    "type": "string",
                    "example": "2024-12-31T23:59:59Z"
                },
                "description": {
                    "type": "string",
                    "maxLength": 500,
                    "minLength": 10
                },
                "id": {
                    "type": "integer"
                },
                "location": {
                    "type": "string",
